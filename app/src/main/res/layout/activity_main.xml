<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Toolbar at the top -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Header Image -->
        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lux"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- App Heading -->
        <TextView
            android:id="@+id/appHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dancing_script_semibold"
            android:gravity="center"
            android:text="LuxeVista"
            android:textColor="@android:color/white"
            android:textSize="80sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@id/headerImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/headerImage"
            app:layout_constraintVertical_bias="0.012" />

        <!-- Resort Text -->
        <TextView
            android:id="@+id/appHeading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dancing_script_semibold"
            android:gravity="center"
            android:text="Resort"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/appHeading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- CardView containing scrollable content -->
        <androidx.cardview.widget.CardView
            android:id="@+id/contentCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
        android:backgroundTint="#40FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/appHeading2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Resort Image -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/resortImageCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        app:cardBackgroundColor="@android:color/white">

                        <ImageView
                            android:id="@+id/resortImage"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:contentDescription="Image of LuxeVista Resort"
                            android:scaleType="centerCrop"
                            android:src="@drawable/resort" />
                    </androidx.cardview.widget.CardView>

                    <!-- Description -->
                    <TextView
                        android:id="@+id/resortDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="4dp"
                        android:text="Welcome to LuxeVista Resort â€“ a haven of luxury and tranquility. Nestled in breathtaking surroundings, our resort offers top-notch facilities, deluxe rooms, exquisite dining, and unforgettable experiences. Your dream vacation starts here!"
                        android:textColor="@color/primaryDarkColor"
                        android:textSize="16sp" />

                    <!-- Register Button -->
                    <Button
                        android:id="@+id/register_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/primaryColor"
                        android:padding="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="Reserve Your Spot"
                        android:textColor="@android:color/white" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:contentDescription="Tab layout for navigating different sections"
                        app:tabIndicatorColor="@color/primaryColor"
                        app:tabSelectedTextColor="@color/primaryColor"
                        app:tabTextColor="@android:color/darker_gray" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="20dp" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/rounded_edittext"
                        android:textColorHint="@android:color/white"
                        android:textColor="@android:color/white" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="16dp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:background="@drawable/rounded_edittext"
                        android:textColorHint="@android:color/white"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/login_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="@color/primaryColor"
                        android:padding="12dp"
                        android:text="Login"
                        android:textColor="@android:color/white" />

                    <!-- Additional Resort Images -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/resortImageCard2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@android:color/white"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:id="@+id/resortImage2"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/resort2" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/resortImageCard3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@android:color/white"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:id="@+id/resortImage3"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/resort3" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/resortImageCard4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@android:color/white"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:id="@+id/resortImage4"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/resort4" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
