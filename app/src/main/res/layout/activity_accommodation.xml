<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/repeating_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/accommodationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/dancing_script_semibold"
            android:gravity="center"
            android:text="LuxeVista Rooms and Suites"
            android:textColor="#111111"
            android:textSize="36sp" />

        <!-- Image Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/accImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/acc_image" />
        </androidx.cardview.widget.CardView>

        <!-- Subheading -->
        <TextView
            android:id="@+id/AccommodationHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All stays include"
            android:textColor="#111111"
            android:textSize="24sp"
            android:layout_marginBottom="20dp" />

        <!-- List Description -->
        <TextView
            android:id="@+id/accommodationDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Daily à la carte breakfast\n• Daily afternoon cream tea\n• In-room refreshments and non-alcoholic beverages\n• Complimentary pressing (three pieces of clothing per room, per day)\n• Daily use of hydrotherapy suites (up to 30 minutes)\n• Daily morning yoga (subject to availability)\n• Access to poolside garden and 21-metre swimming pool\n• Use of library\n• Butler service"
            android:textSize="18sp"
            android:textColor="#333333"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>
</ScrollView>
