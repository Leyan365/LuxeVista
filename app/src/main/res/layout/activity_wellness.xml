<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/repeating_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Heading -->
        <TextView
            android:id="@+id/wellnessHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wellness at LuxeVista"
            android:fontFamily="@font/dancing_script_semibold"
            android:textSize="36sp"
            android:textColor="#111111"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- First Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/wellnessImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/wellness_image" />
        </androidx.cardview.widget.CardView>

        <!-- Short Description -->
        <TextView
            android:id="@+id/wellnessDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indulge in our luxurious wellness services, designed to rejuvenate your body and mind."
            android:textSize="18sp"
            android:lineSpacingExtra="6dp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Long Description -->
        <TextView
            android:id="@+id/wellnessDescription1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="With its candlelit recesses, lofty ceilings and dramatic archways, the Luxe Spa at LuxeVista recaptures a bygone era of taking the waters as restoration for body and mind. Located in our resort, it also enjoys two Hydrotherapy Suites, each offering a massage pool, sauna, steam room and cold-water therapy pool. A range of therapies personalized by the spaâ€™s Ayurvedic physician includes massages, anointments, reflexology, and scrubs."
            android:textSize="18sp"
            android:lineSpacingExtra="6dp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Second Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/wellnessImage1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/wellness_image1" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
